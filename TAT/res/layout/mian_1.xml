<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
       
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DCDCDC"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="55dp"
                android:src="@drawable/erwei" />

            <LinearLayout
        android:id="@+id/ll_constact_serach"
        android:layout_height="35dp"
        android:layout_width="240dp"
        android:layout_margin="10dp"
        android:background="@drawable/acm_inputbox"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerVertical="true">
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name"
            android:src="@drawable/search"/>
        

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
             android:hint="搜索"
           android:textColor="#818181"
             android:textSize="14sp"
            android:ems="10" >

            <requestFocus />
        </EditText>

    </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/xiaoxi" />
        </LinearLayout>

        <ViewFlipper
            android:id="@+id/viewmain1"
            android:layout_width="fill_parent"
            android:layout_height="80dp" >
        </ViewFlipper>

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/viewmain1"
            android:layout_below="@+id/viewmain1" >

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/travelButton"
                        android:layout_width="94dp"
                        android:layout_height="98dp"
                        android:background="@drawable/a"
                        android:text="旅游"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/ziyouxing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/b"
                                android:text="自由行"
                                android:textColor="#FFFFFF" />

                            <Button
                                android:id="@+id/zijiayou"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/b"
                                android:text="自驾游"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/gentuanyou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/b"
                                android:text="跟团游"
                                android:textColor="#FFFFFF" />

                            <Button
                                android:id="@+id/travelOther"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/b"
                                android:text="其他"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/hotelButton"
                        android:layout_width="94dp"
                        android:layout_height="98dp"
                        android:background="@drawable/d"
                        android:text="酒店"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/liansuoHotel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/f"
                                android:text="连锁酒店"
                                android:textColor="#FFFFFF" />

                            <Button
                                android:id="@+id/xingjiHotel"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/f"
                                android:text="星级酒店"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/pingminHotel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/f"
                                android:text="平民酒店"
                                android:textColor="#FFFFFF" />

                            <Button
                                android:id="@+id/hotelOther"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/f"
                                android:text="其他酒店"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/planeButton"
                        android:layout_width="94dp"
                        android:layout_height="98dp"
                        android:background="@drawable/c"
                        android:text="机票"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/guoneiPlane"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/e"
                                android:text="国内机票"
                                android:textColor="#FFFFFF" />

                            <Button
                                android:id="@+id/haiwaiPlane"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/e"
                                android:text="海外机票"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/kuaguoPlane"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/e"
                                android:text="跨国机票"
                                android:textColor="#FFFFFF" />

                            <Button
                                android:id="@+id/tejiaPlane"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/e"
                                android:text="特价机票"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/myOrder"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ccc"
                        android:text="我的订单"
                        android:textColor="#FFFFFF" />

                    
                </LinearLayout>

            </TableRow>
        </TableLayout>
    </LinearLayout>

</RelativeLayout>