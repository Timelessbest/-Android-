<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tat.DingDan_tureActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="270sp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_et_bg3"
            android:gravity="center"
            android:text="订单信息"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/login_picture_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="名    称:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/name_dingdan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="洪崖洞" />
        </LinearLayout>

       
        <LinearLayout
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/login_picture_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/xiangq"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="介     绍:" />

            <TextView
                android:id="@+id/dindan_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:text="千与千寻的取景地，观赏重庆夜景的好去处" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/login_picture_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/yingfu"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="应     付:" />

            <TextView
                android:id="@+id/dindan_yingfu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300.0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/login_picture_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/youhui"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="优     惠:" />

            <TextView
                android:id="@+id/dindan_youhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0" />
        </LinearLayout>
         <LinearLayout
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/login_picture_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="时     间:" />

            <TextView
                android:id="@+id/dindan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-11-21 12:30:26" />
        </LinearLayout>
        

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/login_picture_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/jingge"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="金     额:" />

            <TextView
                android:id="@+id/dindan_jine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300.0"
                android:textColor="#FFA500"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="#FFA500"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/login_picture_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
             android:textSize="12sp" 
            android:text="发票抬头" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="旅游"
            android:textSize="12sp" />
        
    </LinearLayout>

    <Button
        android:id="@+id/dindan_button"
        android:layout_width="130dp"
           android:background="@drawable/login_et_bg3"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
          android:textSize="15sp"
        android:layout_marginTop="48dp"
        android:text="立即支付" />

</RelativeLayout>